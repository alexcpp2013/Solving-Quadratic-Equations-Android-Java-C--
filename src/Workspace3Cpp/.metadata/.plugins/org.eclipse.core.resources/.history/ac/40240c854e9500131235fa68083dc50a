LOCAL_PATH := $(call my-dir)

include $(CLEAR_VARS)

# имя нашего модуля, который будет вызываться в Java при помощи System.loadLibrary()
LOCAL_MODULE    := SolvingEquation
 
 LOCAL_CFLAGS := -DSOLVINGEQUATION  -Wno-psabi -DGL_GLEXT_PROTOTYPES=1
 LOCAL_CFLAGS += -std=c++11
 
LOCAL_DEFAULT_CPP_EXTENSION := cpp
 
#разрешит ьмеханизм ексепшеном в нативном коде
LOCAL_CPP_FEATURES += exceptions

#список файлов, который нужно собрать
LOCAL_SRC_FILES := Solving.cpp
 
#список библиотек из ndk, которые надо включить в сборку
LOCAL_LDLIBS :=  -llog -landroid

include $(BUILD_SHARED_LIBRARY)

